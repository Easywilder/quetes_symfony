{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}

    <h1>Toutes les séries : </h1>
    </br>
    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / <a href="{{ path('wild_show_program',{'slug':program.slug}) }}">{{ program.title }}</a> - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.summary }}</p>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}



{% endblock %}