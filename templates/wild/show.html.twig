        <div class="media-body">
            <h1 class="mt-0">{{  program.title}}</h1>
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.category.name }}</p>
            <h6>Saisons:</h6>
                <ul>
                    {%  for season in program.seasons %}
                    <li> <a href="{{path('wild_show_season',{'id': season.id})}}">{{ season.number }}</a> </li>

                </ul>


            {% endfor %}

        </div>
    </div>



