{% extends 'base.html.twig' %}

{% block title%} Program index {%endblock%}

{% block body %}
    <h1>Index des s√©ries</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Summary</th>
                <th>Poster</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <div>
                <tr>
                    <td>{{ program.id }}</td>
                    <td>{{ program.title }}</td>
                    <td>{{ program.summary }}</td>
                    <td><img alt="" class="poster" src="{{ program.poster }}"></td>
                    <td>
                        <a href="{{ path('program_show', {'slug': program.slug}) }}">show</a>
                        <a href="{{ path('program_edit', {'slug': program.slug}) }}">edit</a>
                    </td>
                </tr>
            </div>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('program_new') }}">Create new</a>
{% endblock %}
